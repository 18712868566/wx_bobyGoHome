page {
    height: 100%;
}

.pageIndex {
    height: 100%;
}

.test-bg {
    width: 100%;
    height: 300rpx;
}

.bg-image {
    display: block;
    width: 100%;
    height: 300rpx;
    background-color: rgba(0, 0, 0, 0.2);
}

.swp_ban {
    position: absolute;
    top: 150rpx;
    left: 50%;
    transform: translate(-50%, 0);
    z-index: 9;
    width: 640rpx;
    height: 320rpx;
    border-radius: 25rpx;
    overflow: hidden;
    box-shadow: 2rpx 2rpx 20rpx #666;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.seach-cell {
    position: absolute;
    top: 40rpx;
    left: 50%;
    transform: translate(-50%, 0);
    width: 640rpx;
    height: 60rpx;
    border-radius: 30rpx;
    box-shadow: 0rpx 0rpx 20rpx #666;
}

.seach_input {
    width: 600rpx;
    display: block;
    height: 60rpx;
    color: #333;
    font-size: 22rpx;
    background: #fff;
    border-radius: 30rpx;
    padding-left: 60rpx;
}

.icon_seach {
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    top: 50%;
    margin-top: -12rpx;
    left: 25rpx;
}

.slo {
    width: 100%;
    height: 200rpx;
    /* background: rgba(0, 0, 0, 0.5); */
}

.box-gonggao {
    width: 640rpx;
    height: 80rpx;
    margin: 15rpx auto;
    background: #fff;
    box-shadow: 0rpx 0rpx 10rpx #999;
    border-radius: 10rpx;
}

.ggtxt {
    width: 620rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    /*禁止自动换行*/
    overflow: hidden;
    line-height: 80rpx;
    color: rgba(51, 51, 51, 0.7);
    text-indent: 20rpx;
}

.icon_home_gg {
    width: 40rpx;
    height: 40rpx;
    position: relative;
    top: 11rpx;
}