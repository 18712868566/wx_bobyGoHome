page {
    height: 100%;
}

.pageIndex {
    height: 100%;
}

.test-bg {
    width: 100%;
    height: 300rpx;
}

.bg-image {
    display: block;
    width: 100%;
    height: 300rpx;
    background-color: rgba(0, 0, 0, 0.2);
}

.swp_ban {
    position: absolute;
    top: 35rpx;
    left: 50%;
    transform: translate(-50%, 0);
    z-index: 9;
    width: 100%;
    height: 330rpx;
    overflow: hidden;
    box-shadow: 2rpx 2rpx 20rpx rgba(0, 0, 0, 0.28);
}

.slide-image {
    width: 100%;
    height: 100%;
}

.seach-cell {
    position: absolute;
    top: 40rpx;
    left: 50%;
    transform: translate(-50%, 0);
    width: 710rpx;
    height: 60rpx;
    border-radius: 30rpx;
    box-shadow: 0rpx 0rpx 20rpx #fff;
}

.seach_input {
    width: 710rpx;
    display: block;
    height: 60rpx;
    color: #333;
    font-size: 22rpx;
    background: #fff;
    border-radius: 30rpx;
    padding-left: 60rpx;
}

.icon_seach {
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    top: 50%;
    margin-top: -12rpx;
    left: 25rpx;
}

.slo {
    width: 100%;
    height: 65rpx;
    /* background: rgba(0, 0, 0, 0.5); */
}

.box-gonggao {
    width: 740rpx;
    height: 80rpx;
    margin: 15rpx auto;
    padding-bottom: 15rpx;
    border-bottom: 1rpx solid #f8f6f9;
}

.ggtxt {
    width: 100%;
    text-overflow: ellipsis;
    white-space: nowrap;
    /*禁止自动换行*/
    overflow: hidden;
    line-height: 80rpx;
    color: rgba(51, 51, 51, 0.7);
    text-indent: 20rpx;
}

.icon_home_gg {
    width: 40rpx;
    height: 40rpx;
    position: relative;
    top: 11rpx;
}


/* data数据展示 */

.newsItem {
    position: relative;
    overflow-y: auto;
}

.newsItem .tit2 {
    font-size: 34rpx;
    color: #333;
    font-style: italic;
    width: 710rpx;
    margin: 0 auto 20rpx;
    display: block;
    position: relative;
    z-index: 2;
}

.newsItem .after {
    height: 10rpx;
    width: 140rpx;
    background: #ffdc00;
    position: absolute;
    left: 19rpx;
    top: 30rpx;
    border-radius: 10rpx;
}

.dataInfo {
    width: 710rpx;
    min-height: 400rpx;
    background: #fff;
    box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.28);
    border-radius: 10rpx;
    margin: 5rpx auto 35rpx;
}

.child_pic {
    width: 100%;
    height: 299rpx;
    margin: 0 auto;
    display: block;
}

.info {
    padding: 20rpx 20rpx;
}

.info text {
    color: #f6534b;
    font-size: 30rpx;
    display: inline-block;
    margin: 0 20rpx 0 0;
    font-weight: bold;
}

.birth_time,
.lost_time,
.lost_place,
.child_feature {
    display: block;
    font-size: 30rpx;
    color: #666;
}

.view_ban {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    padding: 10rpx 0 15rpx;
    border-top: 1rpx solid #f8f6f9;
}

.icon_chakan,
.icon_share,
.icon_xiansuo {
    width: 42rpx;
    height: 42rpx;
}

.view_ban image {
    display: block;
    margin: 0 auto 10rpx;
}

.view_ban .btns {
    flex: 1 1 33.33%;
    text-align: center;
    font-size: 24rpx;
    color: #666;
}