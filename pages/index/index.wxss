/**index.wxss**/

page {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 1;
}

.test-bg {
    width: 100%;
    height: 100%;
    background-color: #70c7da;
}

.bg-image {
    display: block;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
}

.userinfo {
    position: absolute;
    bottom: 0%;
    width: 100%;
    background: rgba(0, 0, 0, 0.2);
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 0 20rpx;
}

.userinfo-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #fff;
    margin-left: 10rpx;
}